{% schema %}
{
  "name": "広告",
  "settings": [
    {
      "type": "range",
      "id": "slider_padding",
      "label": "スライダーのパディング",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "フォントサイズ",
      "min": 13,
      "max": 20,
      "step": 1,
      "default": 16
    },
    {
      "type": "image_picker",
      "id": "slider_image_1",
      "label": "スライダー画像1"
    },
    {
      "type": "url",
      "id": "slider_link_1",
      "label": "スライダーリンク1"
    },
    {
      "type": "image_picker",
      "id": "slider_image_2",
      "label": "スライダー画像2"
    },
    {
      "type": "url",
      "id": "slider_link_2",
      "label": "スライダーリンク2"
    },
    {
      "type": "image_picker",
      "id": "slider_image_3",
      "label": "スライダー画像3"
    },
    {
      "type": "url",
      "id": "slider_link_3",
      "label": "スライダーリンク3"
    }
  ]
}
{% endschema %}

<section class="main_slider" style="padding: {{ settings.slider_padding | times: 10 }}px;">
  <div class="swiper-container">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <a href="{{ settings.slider_link_1 }}">
          <img src="{{ slider_image_1.png | asset_url }}" alt="スライダー画像1">
        </a>
      </div>
      <div class="swiper-slide">
        <a href="{{ settings.slider_link_2 }}">
          <img src="{{ slider_image_2.png | asset_url }}" alt="スライダー画像2">
        </a>
      </div>
      <div class="swiper-slide">
        <a href="{{ settings.slider_link_3 }}">
          <img src="{{ slider_image_3.png | asset_url }}" alt="スライダー画像3">
        </a>
      </div>
    </div>
    <!-- ナビゲーションボタン -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>
</section>
