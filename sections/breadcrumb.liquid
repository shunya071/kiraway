<nav class="breadcrumb" aria-label="パンくずリスト">
  <ol class="breadcrumb__list">
    <li class="breadcrumb__item">
      <a href="{{ routes.root_url }}" class="breadcrumb__link">ホーム</a>
    </li>
    {%- if template contains 'collection' and collection.handle -%}
      <li class="breadcrumb__item">
        <a href="{{ collection.url }}" class="breadcrumb__link">{{ collection.title }}</a>
      </li>
    {%- endif -%}
    {%- if template contains 'product' -%}
      <li class="breadcrumb__item">
        <span class="breadcrumb__current" aria-current="page">{{ product.title }}</span>
      </li>
    {%- elsif template contains 'article' -%}
      <li class="breadcrumb__item">
        <span class="breadcrumb__current" aria-current="page">{{ article.title }}</span>
      </li>
    {%- else -%}
      <li class="breadcrumb__item">
        <span class="breadcrumb__current" aria-current="page">{{ page_title }}</span>
      </li>
    {%- endif -%}
  </ol>
</nav>

{% style %}
.breadcrumb {
  margin: 1.5rem 0;
  padding: 0.5rem 0;
}

.breadcrumb__list {
  display: flex;
  flex-wrap: wrap;
  list-style: none;
  margin: 0;
  padding: 0;
}

.breadcrumb__item {
  display: flex;
  align-items: center;
}

.breadcrumb__item:not(:last-child)::after {
  content: ">";
  margin: 0 0.5rem;
  color: #666;
}

.breadcrumb__link {
  color: #666;
  text-decoration: none;
}

.breadcrumb__link:hover {
  text-decoration: underline;
}

.breadcrumb__current {
  color: #333;
  font-weight: 500;
}
{% endstyle %}