{% style %}
  .product-detail {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
}

.product-detail__image img {
  max-width: 100%;
  border-radius: 8px;
}

.product-detail__info {
  flex: 1;
  max-width: 600px;
}

.product-detail__title {
  font-size: 2rem;
  margin-bottom: 10px;
}

.product-detail__price {
  font-size: 1.5rem;
  color: #000;
  margin-bottom: 10px;
}

.product-detail__compare-price {
  text-decoration: line-through;
  color: #999;
  margin-left: 10px;
}

.product-detail__availability {
  font-size: 1rem;
  margin-bottom: 20px;
}

.product-detail__description {
  margin-bottom: 20px;
}

.product-detail__form {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.product-detail__add-to-cart {
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  text-align: center;
}

.product-detail__add-to-cart:hover {
  background-color: #0056b3;
}

.product-details-cnt {
  margin-top: 4rem;
}

{% endstyle %}

{% render 'breadcrumb' %}

<div class="product-detail">
  <div class="product-detail__image">
    <!-- メイン商品画像 -->
    {% if product.images.size > 0 %}
      <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}" />
    {% else %}
      <p>画像がありません。</p>
    {% endif %}
  </div>

  <div class="product-detail__info">
    <!-- 商品タイトル -->
    <h1 class="product-detail__title">{{ product.title }}</h1>

    <!-- 商品価格 -->
    <p class="product-detail__price">
      {{ product.price | money }}
      {% if product.compare_at_price > product.price %}
        <span class="product-detail__compare-price">
          {{ product.compare_at_price | money }}
        </span>
      {% endif %}
    </p>

    <!-- 在庫情報 -->
    {% if product.available %}
      <p class="product-detail__availability">在庫あり</p>
    {% else %}
      <p class="product-detail__availability">在庫切れ</p>
    {% endif %}

    <!-- 商品説明 -->
    {% if product.description != blank %}
      <div class="product-detail__description">
        <h2>商品説明</h2>
        {{ product.description }}
      </div>
    {% else %}
      <p>商品説明はありません。</p>
    {% endif %}

    <!-- 購入ボタン -->
    {% form 'product', product %}
      <div class="product-detail__form">
        <!-- バリエーション選択 -->
        {% if product.variants.size > 1 %}
          <label for="product-variants">バリエーション:</label>
          <select id="product-variants" name="id">
            {% for variant in product.variants %}
              <option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
            {% endfor %}
          </select>
        {% else %}
          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        {% endif %}

        <!-- カートに追加ボタン -->
        <button type="submit" class="product-detail__add-to-cart">カートに追加</button>
      </div>
    {% endform %}
  </div>
</div>
