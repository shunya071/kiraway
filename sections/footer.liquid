{% style %}
  .k-w100 {
    width: 100%;
  }
  .k-w20 {
    width: 20%;
  }
  .k-w40 {
    width: 40%;
  }
  .k-w35 {
    width: 35%;
  }
  .k-w60-sp {
    width: 60%;
  }
  .k-mWA {
    margin-left: auto;
    margin-right: auto;
  }
  .footer_logo {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80%;
    margin: 0 auto;
  }

  .product_itemlist {
    isplay: flex;
    background: #eee;
    width: 50px;
    height: 50px;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
  }
  .footer_block {
    background: #FFF;
    font-weight: bold;
    padding-top: 3rem;
  }
  .footer_block_wrap {
    margin: 0 auto;
    width: 60%;
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: space-between;
  }
  .footer_block_cnt {
    width: 100%;
  }
  .footer_menu {
    font-size: 14px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5%;
  }
  .footer_menu li {
    border-right: 1px solid #00000033;
    padding: 0 1.5rem;
  }
  .footer_menu li:last-child {
    border: none;
  }
  .footer_copy {
    border-top: 1px solid #464646;
    padding: 1rem 0;
    text-align: center;
    font-size: 14px;
    font-weight: normal;
  }
  @media screen and (max-width: 768px) {
    .footer_menu {
      flex-wrap: wrap;
    }
    .footer_menu li {
      border: none;
      width: 100%;
      padding: 0.5rem 1.5rem;
    }
    .footer_block_wrap {
      align-items: end;
      width: 100%;
    }
    .footer_copy {
      padding: .5rem;
      font-size: 13px;
    }
  }
{% endstyle %}

