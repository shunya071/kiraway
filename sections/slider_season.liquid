          </a>
        </li>
      {%- endif -%}
    </ul>
  </div>
</div>

{{ 'splide.min.js' | asset_url | script_tag }}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Splide('.season', {
      autoplay: true,
      type: 'loop',
      pauseOnHover: false,
      pauseOnFocus: false,
      interval: 5000,
      speed: 2000,
      padding: '60%',
      gap: 20,
      breakpoints: {
        749: {
          perPage: 1,
          padding: '10%'
        }
      }
    }).mount();
  });
</script>

