{% comment %} <style>
  .splide__slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 16/9;
    border-radius: 20px;
  }

  .splide__track {
    margin-top: 4rem;
  }
</style>

<div class="splide season" 
     role="group" 
     aria-label="{{ section.settings.slider_label }}">
  <div class="splide__track">
    <ul class="splide__list">
      {%- if section.settings.season1_image != blank -%}
        <li class="splide__slide">
          <a href="{{ section.settings.season1_links }}">
          <img src="{{ section.settings.season1_image | img_url: 'master' }}"
               alt="{{ section.settings.season1_text }}"
               loading="lazy"
               width="100%"
               height="auto">
          </a>
        </li>
      {%- endif -%}
      
      {%- if section.settings.season2_image != blank -%}
