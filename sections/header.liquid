{% style %}
/* デフォルト状態ではメニューを非表示にする */
.header__nav-area {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  background: #fff;
  width: 100%;
  z-index: 100;
  border-top: 1px solid #ccc;
}

/* メニューが開いている状態 */
.header__nav-area.is-open {
  display: block;
}


{% endstyle %}
<header class="site-header">
  <section class="site-header__wrap">
    <div class="site-header__logo">
      <a href="{{ shop.url }}">
        <img src="{{ kiraway_logo.webp | asset_url }}" alt="{{ shop.name }} Logo">
      </a>
    </div>

    <div class="site-header__extras">
      <a href="/person" class="person-icon">
        <img src="{{ section.settings.person_logo | img_url: 'master' }}" alt="個人情報">
      </a>
      <a href="/cart" class="cart-icon">
        <img src="{{ section.settings.cart_logo | img_url: 'master' }}" alt="カート">
      </a>
      <!-- ハンバーガーメニューアイコン -->
      <a href="javascript:void(0);" class="menu-icon" id="menu-button" aria-controls="navigation" aria-expanded="false" aria-label="メニューを開く">
        <img src="{{ section.settings.menu_logo | img_url: 'master' }}" alt="ハンバーガーメニュー">
      </a>
  
      <!-- ナビゲーションエリア -->
      <div class="header__nav-area js-nav-area" id="navigation">
        <nav id="js-global-navigation" class="global-navigation">
          <ul class="global-navigation__list">
            <li><a href="#">メニュー1</a></li>
            <li><a href="#">メニュー2</a></li>
            <li><a href="#">メニュー3</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </section>
</header>

{% javascript %}
document.addEventListener('DOMContentLoaded', function () {
  const menuButton = document.getElementById('menu-button');
  const navArea = document.getElementById('navigation');

  menuButton.addEventListener('click', function () {
    // 現在の状態を取得
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';

    // 状態を反転させる
    menuButton.setAttribute('aria-expanded', !isExpanded);

    // メニューの開閉を切り替える
    navArea.classList.toggle('is-open');
  });
});

{% endjavascript %}

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "image_picker",
        "id": "person_logo",
        "label": "person_logo"
      },
      {
        "type": "image_picker",
        "id": "cart_logo",
        "label": "Cart_logo"
      },
      {
        "type": "image_picker",
        "id": "menu_logo",
        "label": "Menu_logo"
      }
    ]
  }
{% endschema %}