{% section 'header' %}
  {% section 'breadcrumb' %}
<div class="product-page-container product">
  <!-- メイン画像とサムネイルのコンテナ -->
  <div class="product-image-container">
    <!-- メイン画像スライダー -->
    <div class="product-image-main swiper mainSwiper">
      <div class="swiper-wrapper">
        {% for image in product.images %}
          <div class="swiper-slide">
            <img src="{{ image | img_url: 'large' }}" alt="{{ product.title }}" loading="lazy">
          </div>
        {% endfor %}
      </div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>

    <!-- サムネイル画像スライダー -->
    <div class="product-image-thumbs swiper thumbSwiper">
      <div class="swiper-wrapper">
        {% for image in product.images %}
          <div class="swiper-slide">
            <img src="{{ image | img_url: 'small' }}" alt="{{ product.title }}" loading="lazy">
          </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <!-- 商品情報 -->
  <div class="product-details">
    <h1 class="product-title">{{ product.title }}</h1>
    
    <!-- 商品価格 -->
    <p class="product-price">
      {{ product.price | money }}
    </p>

    <!-- 商品在庫情報 -->
    {% if product.available %}
      <p class="product-availability in-stock">在庫あり</p>
    {% else %}
      <p class="product-availability out-of-stock">在庫切れ</p>
    {% endif %}

    <!-- 商品説明 -->
    <div class="product-description">
      {{ product.description }}
    </div>

    <!-- 購入フォーム -->
    {% if product.available %}
      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        {% form 'product', product %}
          <button type="submit" name="add" class="add-to-cart-btn"
            {% if product.selected_or_first_available_variant.available == false %}disabled{% endif %}
            data-product-id="{{ product.id }}"
          >
            <span class="add-to-cart-text">
              {%- if product.selected_or_first_available_variant.available -%}
                カートに追加
              {%- else -%}
                売り切れ
              {%- endif -%}
            </span>
            <div class="loading-overlay__spinner hidden">
              <svg class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
              </svg>
            </div>
          </button>
        {% endform %}
      </form>
    {% else %}
      <button class="add-to-cart-btn disabled" disabled>在庫切れ</button>
    {% endif %}
  </div>
</div>


{% section 'footer' %}

<script>
  document.querySelector('.add-to-cart-btn').addEventListener('click', function(e) {
    e.preventDefault();
    
    const form = this.closest('form');
    const button = this;
    const spinner = button.querySelector('.loading-overlay__spinner');
    
    button.classList.add('loading');
    spinner.classList.remove('hidden');
    
    fetch('/cart/add.js', {
      method: 'POST',
      body: new FormData(form),
      headers: {
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => {
      if (!response.ok) {
        throw new Error('Network response was not ok');
      }
      return response.json();
    })
    .then(data => {
      // カートページに遷移
      window.location.href = '{{ routes.cart_url }}';
    })
    .catch(error => {
      console.error('Error:', error);
      // エラー表示処理
    });
  });

  var thumbSwiper = new Swiper(".thumbSwiper", {
    spaceBetween: 10,
    slidesPerView: 4,
    freeMode: true,
    watchSlidesProgress: true,
  });
  
  var mainSwiper = new Swiper(".mainSwiper", {
    spaceBetween: 10,
    loop: true,
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    thumbs: {
      swiper: thumbSwiper,
    },
  });
  </script>

{% style %}
  .product-page-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 5rem;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    font-family: Arial, sans-serif;
  }

  .product-image-container {
    width: 35%;
    margin-bottom: 20px;
  }

  .product-image-main {
    width: 100%;
    margin-bottom: 10px;
  }

  .product-image-main img {
    width: 100%;
    height: auto;
    object-fit: contain;
    border: 1px solid #ccc;
    border-radius: 8px;
  }

  .product-image-thumbs {
    width: 100%;
  }

  .product-image-thumbs .swiper-slide {
    opacity: 0.4;
    cursor: pointer;
  }

  .product-image-thumbs .swiper-slide-thumb-active {
    opacity: 1;
  }

  .product-image-thumbs img {
    width: 100%;
    height: auto;
    border-radius: 4px;
  }

  /* ナビゲーションボタンのスタイル */
  .swiper-button-next,
  .swiper-button-prev {
    color: #000;
  }

  .swiper-button-next:after,
  .swiper-button-prev:after {
    font-size: 24px;
  }

  .product-details {
    width: 53%;
    padding-top: 3rem;
  }

  .product-title {
    font-size: 1.7rem;
    font-weight: bold;
    margin-bottom: 10px;
    color: #333;
  }

  .product-price {
    font-size: 24px;
    color: #464646;
    margin-bottom: 15px;
  }

  .product-availability {
    font-size: 16px;
    margin-bottom: 20px;
  }

  .in-stock {
    color: green;
  }

  .out-of-stock {
    color: red;
  }

  .product-description {
    margin-bottom: 20px;
    line-height: 1.6;
    color: #555;
  }

  .add-to-cart-btn.disabled {
    background: #ccc;
    cursor: not-allowed;
  }

  .add-to-cart-btn {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 70%;
    margin: 0 auto;
    padding: 1rem 2rem;
    background-color: #FFF;
    color: #333;
    outline: 3px solid #333;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  
  .add-to-cart-btn:hover {
    background-color: #333;
    color: #FFF;
  }
  
  .add-to-cart-btn:disabled {
    background-color: #ccc;
    outline: none;
    cursor: not-allowed;
  }
  
  .add-to-cart-btn.loading .add-to-cart-text {
    opacity: 0;
  }
  
  .loading-overlay__spinner {
    position: absolute;
    width: 24px;
    height: 24px;
  }
  
  .loading-overlay__spinner.hidden {
    display: none;
  }
  
  .spinner {
    animation: rotate 2s linear infinite;
  }
  
  .path {
    stroke: #fff;
    stroke-linecap: round;
    animation: dash 1.5s ease-in-out infinite;
  }
  
  @keyframes rotate {
    100% {
      transform: rotate(360deg);
    }
  }
  
  @keyframes dash {
    0% {
      stroke-dasharray: 1, 150;
      stroke-dashoffset: 0;
    }
    50% {
      stroke-dasharray: 90, 150;
      stroke-dashoffset: -35;
    }
    100% {
      stroke-dasharray: 90, 150;
      stroke-dashoffset: -124;
    }
  }
{% endstyle %}