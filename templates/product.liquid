{% section 'header' %}

<div class="product-page-container">
  <!-- 商品画像 -->
  <div class="product-image">
    <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
  </div>

  <!-- 商品情報 -->
  <div class="product-details">
    <h1 class="product-title">{{ product.title }}</h1>
    
    <!-- 商品価格 -->
    <p class="product-price">
      {{ product.price | money }}
    </p>

    <!-- 商品在庫情報 -->
    {% if product.available %}
      <p class="product-availability in-stock">在庫あり</p>
    {% else %}
      <p class="product-availability out-of-stock">在庫切れ</p>
    {% endif %}

    <!-- 商品説明 -->
    <div class="product-description">
      {{ product.description }}
    </div>

    <!-- 購入フォーム -->
    {% if product.available %}
      <form method="post" action="/cart/add">
        <input type="hidden" name="id" value="{{ product.variants.first.id }}">
        <button type="submit" class="add-to-cart-btn">カートに追加</button>
      </form>
    {% else %}
      <button class="add-to-cart-btn disabled" disabled>在庫切れ</button>
    {% endif %}
  </div>
</div>
<div class="product-reviews">
  <h2 class="reviews-title">レビュー <span class="review-count">{{ product.reviews_count }}</span>件</h2>
  <div class="reviews-summary">
    <div class="average-rating">
      <span class="stars">{{ product.average_rating | times: 20 }}%</span>
      <span class="rating-value">{{ product.average_rating }}</span>
    </div>
    <button class="post-review-btn">レビューを投稿する</button>
  </div>
  <div class="reviews-list">
    {% for review in product.reviews %}
      <div class="review">
        <div class="review-header">
          <div class="review-rating">
            {% for i in (1..5) %}
              {% if i <= review.rating %}
                ★
              {% else %}
                ☆
              {% endif %}
            {% endfor %}
          </div>
          <span class="review-date">{{ review.date | date: "%Y/%m/%d" }}</span>
        </div>
        <h3 class="review-title">{{ review.title }}</h3>
        <p class="review-content">{{ review.content }}</p>
        <p class="review-author">- {{ review.author }}</p>
        <div class="review-actions">
          <a href="#" class="report-link">不適切を通報する</a>
          <span class="useful-count">役に立った {{ review.useful_count }}</span>
        </div>
      </div>
    {% endfor %}
  </div>
  <a href="#" class="view-all-reviews">すべてのレビューを見る</a>
</div>


