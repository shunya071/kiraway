  }

  :root {
    --text-color: {{ settings.text_color | default: '#333' }};
    --highlight-color: {{ settings.highlight_color | default: '#ff6600' }};
    --title-font-size: {{ settings.title_font_size | default: 1.7 }}rem;
  }

  .product_gray {
