/* スライダー全体のスタイル */
.main_slider {
  padding: {{ settings.slider_padding | times: 10 }}px;
}

/* スライド画像のスタイル */
.swiper-slide img {
  width: 100%;  /* 画像をスライドの幅に合わせる */
  height: auto; /* 高さを自動調整 */
}

/* ナビゲーションボタン */
.swiper-button-next, .swiper-button-prev {
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
}
