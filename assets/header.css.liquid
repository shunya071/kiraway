@font-face {
  font-family: "Noto Sans JP";
  src: url("{{ 'myfont.woff' | asset_url }}") format("woff");
}

body {
  overflow-x: hidden;
  margin: 0;
  padding: 0;
}

header {
  padding: 1.4em;
  background: #fff;
  box-shadow: 3px 3px 6px #00000033;
}

.header_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;

}

.logotype img {
  width: 60px;
  height: 60px;
}

.nav_img {
  width: 40px;
  height: 40px;
  margin: 0 10px;
}

nav {
  display: flex;
  align-items: center;
}
@media screen and (max-width: 48em) {
  nav nav {
    display: inline;
  }
}

.menu__box {
  display: flex;
  flex-direction: row;
  list-style-type: none;
}
.menu__box {
  flex-direction: column;
  position: fixed;
  visibility: hidden;
  top: 0;
  left: 0;
  width: 100%;
  height: 15em;
  margin: -600px 0 0 0;
  padding: 0.6em 0;
  text-align: center;
  background-color: #fff;
  box-shadow: 1px 0 6px rgba(0, 0, 0, 0.2);
  z-index: 1;
  transition-duration: 0.5s;
}

.menu__item {
  display: flex;
  flex-direction: column;
  padding: 0 1em 0 1.9em;
  color: #333;
  font-family: sans-serif;
  font-weight: 400;
  text-decoration: none;
  text-transform: uppercase;
}
.menu__item {
  display: block;
  padding: 12px 24px;
  font-size: 16px;
  transition-duration: 0.5s;
}
.menu__item:hover {
  background-color: #4f5464;
}

#menu__toggle {
  opacity: 0;
}
#menu__toggle:checked ~ .menu__btn > span {
  transform: rotate(45deg);
}
#menu__toggle:checked ~ .menu__btn > span::before {
  top: 0;
  transform: rotate(0);
  background: #464646;
}
#menu__toggle:checked ~ .menu__btn > span::after {
  top: 0;
  transform: rotate(90deg);
  background: #464646;
}
#menu__toggle:checked ~ .menu__box {
  visibility: visible;
  left: 0;
  margin: 0;
}
.toggle {
  display: none;
}

.menu__btn {
  transition-duration: 0.25s;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  position: relative;
  bottom: -2px;
  width: 35px;
  height: 35px;
  cursor: pointer;
  z-index: 2;
  margin: 0 15px;
}
.menu__btn span {
  display: inline-block;
  position: absolute;
  width: 100%;
  height: 3px;
  background-color: #464646;
}
.menu__btn span::before {
  display: inline-block;
  position: absolute;
  width: 100%;
  height: 3px;
  background-color: #464646;
  content: "";
  top: -12px;
  transition-duration: 0.25s;
}
.menu__btn span::after {
  display: inline-block;
  position: absolute;
  width: 100%;
  height: 3px;
  background-color: #464646;
  content: "";
  top: 12px;
  transition-duration: 0.25s;
}

@media screen and (max-width: 48em) {
  .logotype img {
    width: 40px;
    height: 40px;
  }
  .nav_img {
    width: 30px;
    height: 30px;
  }
  header {
    padding: 1rem;
  }
  .menu__btn {
    width: 30px;
    height: 30px;
  }
}
